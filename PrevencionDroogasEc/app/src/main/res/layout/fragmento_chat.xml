<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SELECCIONA EL TEMA QUE QUIERES CONVERSAR CON NOSOTROS:"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:id="@+id/textView15" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_vertical_margin">

                    <RadioGroup
                        android:id="@+id/grupo_radio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/borde">

                        <RadioButton
                            android:text="Denunciar la venta de droga en tu escuela o barrio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radio"
                            android:textSize="18dp"/>

                        <RadioButton
                            android:text="Conversar sobre el uso y consumo de drogas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radio1"
                            android:textSize="18dp"/>

                        <RadioButton
                            android:text="Conversar sobre como prevenir el consumo de drogas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radio2"
                            android:textSize="18dp"/>

                        <RadioButton
                            android:text="Otro..."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radio4"
                            android:textSize="18dp"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Escribe otro tema..."
                            android:textSize="14dp"
                            android:ems="21"
                            android:id="@+id/descrip"/>
                    </RadioGroup>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_marginTop="10dp"
                        android:text="Informar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnChat"
                        android:padding="15dip"
                        android:background="#f50602ed"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:onClick="informar"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="O llamanos haciendo clic aqui:"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"/>

                    <Button
                        android:id="@+id/btnLlamar"
                        android:text="1800-335486 (delito)"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dip"
                        android:background="@drawable/bordebtn"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
