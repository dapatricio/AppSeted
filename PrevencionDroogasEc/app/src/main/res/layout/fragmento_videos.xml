<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bordevid"
                android:layout_marginTop="5dp"
                android:id="@+id/btnVd">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:paddingLeft="5dp"
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:layout_weight="0.2"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/queseted1"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="¿Qué es la Secretaría Técnica de Drogas?"
                            android:textSize="12dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:id="@+id/textView1"
                            android:layout_marginTop="25dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bordevid"
                android:layout_marginTop="5dp"
                android:id="@+id/btnVd1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:paddingLeft="5dp"
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:layout_weight="0.2"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/alcoholcole"
                        android:id="@+id/imageView6" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_weight="1">

                        <TextView
                            android:paddingLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alcohol en los colegios"
                            android:textSize="12dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:id="@+id/textView2"
                            android:layout_marginTop="25dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"/>

                    </LinearLayout>
                </TableRow>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bordevid"
                android:layout_marginTop="5dp"
                android:id="@+id/btnVd2">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:paddingLeft="5dp"
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:layout_weight="0.2"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/drogah"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="'H' la droga que mata"
                            android:textSize="12dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:id="@+id/textView3"
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bordevid"
                android:layout_marginTop="5dp"
                android:id="@+id/btnVd3">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:paddingLeft="5dp"
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:layout_weight="0.2"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/alcoholhom"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="El Alcohol en Hombres y Mujeres"
                            android:textSize="12dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:id="@+id/textView4"
                            android:layout_marginTop="25dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </TableRow>
            </LinearLayout>
        </TableLayout>
    </ScrollView>
</RelativeLayout>
